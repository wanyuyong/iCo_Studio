<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Magic_style" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_magic_style</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Magic_style</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Magic_style</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Magic_style</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Magic_style</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Magic_style</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_magic_style</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_magic_style</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Magic_style</item>

        <!-- Light.DarkActionBar specific -->
        <item name="android:actionBarWidgetTheme">@style/Theme.Magic_style.Widget</item>
        <item name="android:windowContentOverlay">@drawable/actionbar_shadow</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/Animation.Magic</item>
    </style>

    <style name="Animation.Magic" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/activity_open_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_open_exit</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_close_enter</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_close_exit</item>
        <item name="android:taskOpenEnterAnimation">@anim/activity_open_enter</item>
        <item name="android:taskOpenExitAnimation">@anim/activity_open_exit</item>
        <item name="android:taskCloseEnterAnimation">@anim/activity_close_enter</item>
        <item name="android:taskCloseExitAnimation">@anim/activity_close_exit</item>
        <item name="android:taskToFrontEnterAnimation">@anim/activity_open_enter</item>
        <item name="android:taskToFrontExitAnimation">@anim/activity_open_exit</item>
        <item name="android:taskToBackEnterAnimation">@anim/activity_close_enter</item>
        <item name="android:taskToBackExitAnimation">@anim/activity_close_exit</item>
    </style>

    <style name="ActionBar.Solid.Magic_style" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/ab_solid_magic_style</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_magic_style</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_magic_style</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Magic_style</item>
    </style>

    <style name="ActionBar.Transparent.Magic_style" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@drawable/ab_transparent_magic_style</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Magic_style</item>
    </style>

    <style name="PopupMenu.Magic_style" parent="@android:style/Widget.Holo.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_magic_style</item>
    </style>

    <style name="DropDownListView.Magic_style" parent="@android:style/Widget.Holo.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_magic_style</item>
    </style>

    <style name="ActionBarTabStyle.Magic_style" parent="@android:style/Widget.Holo.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_magic_style</item>
    </style>

    <style name="DropDownNav.Magic_style" parent="@android:style/Widget.Holo.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_magic_style</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_magic_style</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_magic_style</item>
    </style>

    <style name="ProgressBar.Magic_style" parent="@android:style/Widget.Holo.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_magic_style</item>
    </style>

    <style name="ActionButton.CloseMode.Magic_style" parent="@android:style/Widget.Holo.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_magic_style</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Magic_style.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu.Magic_style</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Magic_style</item>
    </style>

</resources>