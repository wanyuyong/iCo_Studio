<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <magic.yuyong.view.TwitterBoardScrollView
        android:id="@+id/twitter_board_scrollview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/twitter_borad_bg" >

        <magic.yuyong.view.TwitterBoard
            android:id="@+id/twitter_board"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent" />
    </magic.yuyong.view.TwitterBoardScrollView>

    <magic.yuyong.view.DivideView
        android:id="@+id/divide_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="invisible" />

</FrameLayout>